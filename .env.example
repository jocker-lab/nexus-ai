# ==================== Nexus AI - Environment Variables Example ====================
# Copy this file to .env and fill in your actual values
# IMPORTANT: .env is gitignored to protect sensitive data

# ==================== LangSmith 配置 ====================
LANGSMITH_PROJECT=your_project_name
LANGSMITH_API_KEY=your_langsmith_api_key_here

# ==================== API Keys ====================
# LLM API Keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# 搜索和数据 API Keys
TAVILY_API_KEY=your_tavily_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here
NEWSAPI_API_KEY=your_newsapi_api_key_here

# ==================== 数据库配置 ====================
# Format: mysql+pymysql://username:password@host:port/database?charset=utf8mb4
DATABASE_URL=mysql+pymysql://user:password@localhost:3306/nexus-ai?charset=utf8mb4

DATABASE_SCHEMA=

# ==================== MinIO对象存储配置 ====================
# MinIO连接配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=nexus-reports
MINIO_SECURE=false

# ==================== 其他配置 ====================
ENABLE_PYTHON_REPL=true
EXECUTE_QUERY_MAX_CHARS=4000
